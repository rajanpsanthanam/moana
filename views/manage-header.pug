extends layout.pug

block content
  .container
    .row
      .col-sm-10
        a(href="/")
          img.img-square(src='/images/simba.png', height='60', width='50')
      .col-sm-2
        a.btn.btn-primary(href='/logout', role='button') Logout
    br
    block sidebar
      .row
        .col-md-2
          p.lead Manage
          ul.nav.nav-pills.nav-stacked
            li(role='presentation')
              a(href='/profile') Profile
            if (user.is_admin)
              li(role='presentation')
                a(href='/accounts') Accounts
              li(role='presentation')
                a(href='/users') Users
              li(role='presentation')
                a(href='/stages') Stages
              li(role='presentation')
                a(href='/features') Features
        .col-md-10
          block pane
