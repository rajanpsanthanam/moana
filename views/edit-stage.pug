extends layout

block content
  .container
    .cover-container
      h1 Update Stage
      br
      form(role='form', action='/stages/'+stage.name, method='post', style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name="name", placeholder='Enter name', value=stage.name)
        .form-group
          input.form-control(name='order', type='number', placeholder='enter the order', value=stage.order)
        .form-group
          input.form-control(type='text', name="color", placeholder='Enter color', value=stage.color)
        .row
          .col-xs-6.col-sm-6.col-md-6
            input.btn.btn.btn-warning.btn-block(type='submit', value='Update')
          .col-xs-6.col-sm-6.col-md-6
            a.btn.btn.btn-primary.btn-block(href='/') Cancel
