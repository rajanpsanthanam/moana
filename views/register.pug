extends layout

block content
  .container
    a(href="/")
      img.img-square(src='/images/illustration.png', height='150', width='150')
    br
    br
    p.lead Hey there, I am Simba. Your virtual assistant.
    br
    h1 Sign Up..
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='username')
      .form-group
          input.form-control(type='text', name="email", placeholder='email address')
      .form-group
        input.form-control(type='password', name="password", placeholder='password')
      .col-md-6
        input.btn.btn-sm.btn-success.btn-block(type='submit', value='Sign Up')
      .col-md-6
        a.btn.btn-sm.btn-secondary.btn-block(href='/') Cancel
    br
    br
    p Already a user?
      a(href="/")
        |  Login
