extends sub-layout.pug

block pane
  .cover-container
    h1 Create Stage
    br
    form(role='form', action="/stages",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="name", placeholder='enter name')
      .form-group
        input.form-control(name='order', type='number', placeholder='enter the order')
      .form-group
        input.form-control(type='text', name="bgColor", placeholder='Enter background color')
      .form-group
        input.form-control(type='text', name="fontColor", placeholder='Enter font color')
      .row
        .col-xs-6.col-sm-6.col-md-6
          input.btn.btn.btn-warning.btn-block(type='submit', value='Create')
        .col-xs-6.col-sm-6.col-md-6
          a.btn.btn.btn-primary.btn-block(href='/stages') Cancel
