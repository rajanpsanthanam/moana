extends layout

block content
  .container
    .cover-container
      h1 Change Stage
      br
      form(role='form', action="/stages/change",method="post", style='max-width: 300px;')
        .form-group
          select.form-control(name='stage')
            for stage in stages
              option #{stage.name}
        .row
          .col-xs-6.col-sm-6.col-md-6
            input.btn.btn.btn-warning.btn-block(type='submit', value='Change')
          .col-xs-6.col-sm-6.col-md-6
            a.btn.btn.btn-primary.btn-block(href='/') Cancel
