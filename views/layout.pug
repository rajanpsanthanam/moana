doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/lib/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css', media='screen')
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.css.map')
    link(rel='stylesheet', href='/stylesheets/lib/jquery-ui.min.css')
