extends layout

block content
  .container
    .row
      .col-sm-1
        a(href='/')
          i.fa.fa-chevron-left.fa-2x
      .col-sm-4
        p.lead Manage Accounts
      .col-sm-4
        form(role='form', action="/accounts/", method="get")
          .input-group
            input.form-control(type='text', placeholder='Search for...', name='name')
            span.input-group-btn
              button.btn.btn-default(type='submit') Go!
      .col-sm-2
        a.btn.btn-warning(href='/accounts/add', role='button') Add Account
      .col-sm-1
        a(href="/logout")
          i.fa.fa-sign-out.fa-2x
    .modal-body.row
      .col-md-2
        h4 Filters
        form(role='form', action="/accounts/", method="get", style='max-width: 300px;')
          .form-group
            label(for='primary_manager') Account Manager
            select.form-control(name='primary_manager')
              option all
              for user in users
                option(selected=user.username == filters.primary_manager) #{user.username}
          .form-group
            label(for='secondary_manager') Backup Manager
            select.form-control(name='secondary_manager', value=filters.secondary_manager)
              option all
              for user in users
                option(selected=user.username == filters.secondary_manager) #{user.username}
          button.btn.btn-default(type='submit') Submit

      .col-md-10
        table.table.table-hover.table-stripped
          thead
            tr
              th Account
              th Account Manager
              th Backup Manager
              th Edit
              th Delete
          for account in accounts
            tr
              td
                a(href='/accounts/'+account.name) #{account.name}
              td
                p #{account.primary_manager}
              td
                p #{account.secondary_manager}
              td
                a(href='/accounts/edit/'+account.name)
                  i.fa.fa-pencil(aria-hidden='true')
              td
                a(href='/accounts/remove/'+account.name)
                  i.fa.fa-trash(aria-hidden='true')
