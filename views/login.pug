extends layout

block content
  .cover-container
    .container
      h1 Login
      br
      form(role='form', action="/login",method="post", style='max-width: 300px;')
        .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username')
        .form-group
          input.form-control(type='password', name="password", placeholder='Password')
        .row
          .col-xs-6.col-sm-6.col-md-6
            input.btn.btn.btn-success.btn-block(type='submit', value='Sign In')
          .col-xs-6.col-sm-6.col-md-6
            a.btn.btn.btn-primary.btn-block(href='/') Cancel
